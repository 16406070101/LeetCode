ç¤ºä¾‹ 2ï¼š

è¾“å…¥ï¼šmatrix = [[1,10,4,2],[9,3,8,7],[15,16,17,12]]
è¾“å‡ºï¼š[12]
è§£é‡Šï¼š12 æ˜¯å”¯ä¸€çš„å¹¸è¿æ•°ï¼Œå› ä¸ºå®ƒæ˜¯å…¶æ‰€åœ¨è¡Œä¸­çš„æœ€å°å€¼ï¼Œä¹Ÿæ˜¯æ‰€åœ¨åˆ—ä¸­çš„æœ€å¤§å€¼ã€‚
ç¤ºä¾‹ 3ï¼š

è¾“å…¥ï¼šmatrix = [[7,8],[1,2]]
è¾“å‡ºï¼š[7]

class Solution {
public:
    vector<int> luckyNumbers (vector<vector<int>>& matrix) {
        vector<int >  Myres;//å­˜å‚¨ç»“æœ
        int m=matrix.size();
        if(m==0){
            return Myres;
        }
        int n=matrix[0].size();
        vector<bool > block(n,0);
        vector<vector<bool >> tmp;//ä¸€ä¸ªä¸matrixåŒå¤§å°çš„æ•°ç»„
        for(int i=0;i<m;i++){
            tmp.push_back(block);
        }
        for(int i=0;i<m;i++){     //è®°å½•æ¯è¡Œæœ€å°æ•°å€¼çš„ä½ç½®ï¼Œæ‰¾åˆ°åæŠŠtmpä¸Šå¯¹åº”ä½ç½®æ ‡è®°å‡ºæ¥
            int ix=i;
            int jx=0;
            int imin=matrix[i][0];
            for(int j=0;j<n;j++){
                if(imin>=matrix[i][j]){
                    imin=matrix[i][j];
                    ix=i;
                    jx=j;
                }
            }
            tmp[ix][jx]=1;
        }
        for(int i=0;i<n;i++){       //è®°å½•æ¯ä¸€åˆ—ä¸­æœ€å¤§çš„ä½ç½®ï¼Œæ‰¾åˆ°åæŸ¥çœ‹æ˜¯å¦ä¸ºè¡Œä¸­æœ€å°çš„ä½ç½®
            int jx=i;
            int ix=0;
            int imax=matrix[0][i];
            for(int j=0;j<m;j++){
                if(imax<=matrix[j][i]){
                    imax=matrix[j][i];
                    ix=j;
                    jx=i;
                }         
            }
            if(tmp[ix][jx]==1){     //å¦‚æœæ˜¯ï¼Œé‚£ä¹ˆå°±å­˜å‚¨ä¸‹æ¥
                Myres.push_back(matrix[ix][jx]);
            }
        }
        return Myres;
        
    }
};

//ğŸ˜‚ä¼˜åŒ–ä¸€ä¸‹ï¼Œå› ä¸ºæˆ‘æƒ³äº†æƒ³å­˜å‚¨è¡Œå’Œåˆ—åº”è¯¥æ˜¯ä¸ç”¨äºŒç»´æ•°ç»„å­˜çš„ï¼Œå¯ä»¥ç”¨ä¸€ç»´ï¼Œä¸‹æ ‡å°±æ˜¯è¡Œï¼Œç„¶åç´¢å¼•å€¼å°±æ˜¯åˆ—

class Solution {
public:
    vector<int> luckyNumbers (vector<vector<int>>& matrix) {
        vector<int >  Myres;//å­˜å‚¨ç»“æœ
        int m=matrix.size();
        if(m==0){
            return Myres;
        }
        int n=matrix[0].size();
        int tmp[m]={0};//ä¸€ä¸ªä¸matrixåŒå¤§å°çš„æ•°ç»„
        for(int i=0;i<m;i++){     //è®°å½•æ¯è¡Œæœ€å°æ•°å€¼çš„ä½ç½®ï¼Œæ‰¾åˆ°åæŠŠtmpä¸Šå¯¹åº”ä½ç½®æ ‡è®°å‡ºæ¥
            int ix=i;
            int jx=0;
            int imin=matrix[i][0];
            for(int j=0;j<n;j++){
                if(imin>=matrix[i][j]){
                    imin=matrix[i][j];
                    ix=i;
                    jx=j;
                }
            }
            tmp[ix]=jx;
        }
        for(int i=0;i<n;i++){       //è®°å½•æ¯ä¸€åˆ—ä¸­æœ€å¤§çš„ä½ç½®ï¼Œæ‰¾åˆ°åæŸ¥çœ‹æ˜¯å¦ä¸ºè¡Œä¸­æœ€å°çš„ä½ç½®
            int jx=i;
            int ix=0;
            int imax=matrix[0][i];
            for(int j=0;j<m;j++){
                if(imax<=matrix[j][i]){
                    imax=matrix[j][i];
                    ix=j;
                    jx=i;
                }         
            }
            if(tmp[ix]==jx){     //å¦‚æœæ˜¯ï¼Œé‚£ä¹ˆå°±å­˜å‚¨ä¸‹æ¥
                Myres.push_back(matrix[ix][jx]);
            }
        }
        return Myres;
        
    }
};
